

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/assets/css/barra.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="content">

            <% if (successMessage) { %>
                <div class="d-flex justify-content-center mt-3">
                    <div class="alert alert-success text-center" role="alert">
                <%= successMessage %>
            </div>
        </div>
            <% } %>
 

    <div class="seccion-botones">
        <br>
        <a href="/admin/register" class="boton-derecha">Registrar Usuarios</a>
    </div>
    <br>
    <h1>Listado de Usuarios</h1>
        <div class="lista-usuarios">
            <table>
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.role %></td>
                            <td class="acciones">
                                <button  type="submit">
                                    <a href="/admin/ver/datos/<%= usuario.id %>">Ver</a>
                                </button>
                                <button  type="submit">
                                    <a href="/admin/editar/datos/<%= usuario.id %>">Editar</a>
                                </button>
                                <button type="submit">
                                    <a href="/user-roles/delete/<%= usuario.id %>">Eliminar</a>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
</div>
</body>
</html>




